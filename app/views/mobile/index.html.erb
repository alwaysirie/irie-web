<!-- LoginPage -->
<div data-role="page" id="LoginPage" data-backbtn="false">
	<%= @heading.html_safe %>
	<div data-role="content">
		<input type="hidden" id="login_purchase" value="no">
		<h2 style="margin:0 0 5px 0;">Login</h2>
		Username:<br>
		<input type="text" id="login_username"><br>
		Password:<br>
		<input type="password" id="login_password"><br>
		<input type="submit" value="Login" onclick="tryToLogin()"><br>
		<h2 style="margin:0px 0 5px 0;">Register</h2>
		First Name:<br>
		<input type="text" id="register_first_name"><br>
		Last Name:<br>
		<input type="text" id="register_last_name"><br>
		Email (Username):<br>
		<input type="text" id="register_email"><br>
		Password:<br>
		<input type="password" id="register_password"><br>
		Verify Password:<br>
		<input type="password" id="register_password_verify"><br>
		<input type="submit" value="Create Account" onclick="registerAccount()"><br>
	</div>
</div>