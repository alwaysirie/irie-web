<!-- HomePage -->
<div data-role="page" id="HomePage">
	<%= @heading.html_safe %>
	<div data-role="content">
		<div style="margin:-15px;">
			<table class="HomePageWrapper" cellspacing="0" cellpadding="0">
				<tbody class="dealInsertWrapper">
					
				</tbody>
				<tr>
					<td class="homeMainButton">
						<a href="#DealsPage" data-transition="slide" class="homeButtons"><img src="/assets/mobile_dealList.png" border="0" width="85"><p>All Deals</p></a>	
					</td>
					<td class="homeMainButton">
						<a href="#DealMap" data-transition="slide" class="homeButtons"><img src="/assets/mobile_dealMap.png" border="0" width="85"><br><p>Local Deals</p></a>
					</td>
					<td class="homeMainButton">
						<a href="#MyDeals" data-transition="slide" class="homeButtons"><img src="/assets/mobile_MyDeals.png" border="0" width="85"><br><p>My Deals</p></a>
					</td>
				</tr>
			</table>
		</div>
	</div>
</div>
<!-- MyDeals -->
<div data-role="page" id="MyDeals">
	<%= @heading.html_safe %>
	<div data-role="content"> 
		<div style="margin:-15px;">
			<table class="myDealsTable">
				<tr><td colspan="3"><h2>Purchased Deals</h2></td></tr>
				<tr>
					<td class="heading">Deal</td>
					<td class="heading viewMyDeal">View</td>					
				</tr>
				<tbody id="myDeals">
					<tr>
						<td colspan="3" class="noDeals">You have not purchased any deals yet.</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
<!-- ViewMyDeal -->
<div data-role="page" id="ViewMyDeal">
	<%= @heading.html_safe %>
	<div data-role="content"> 
		<div id="viewDealWrapper">
			<h3 id="viewDealCompanyName">Company Name</h3>
			<div id="headlineValueWrapper">
				<div id="viewDealHeadline"></div>
				<div id="viewDealValue"></div>
			</div>
			<div id="viewDealDescription"></div>
			<div id="viewDealFinePrint"></div>
			
			<div id="barcodeArea" style="width:100%;text-align:center;padding:15px 0 15px 0;">
				<div class="barcode128h" id="barcode128h"></div>
			</div>

			<div id="viewDealID"></div>
		</div>
	</div>
</div>
<!-- DealMap -->
<div data-role="page" id="DealMap">
	<%= @heading.html_safe %>
		<div data-role="content" style="width:100%; height:100%; padding:0;"> 
			<div id="map_canvas"></div>
		</div>
</div>
<!-- DealsPage -->
<div data-role="page" id="DealsPage">
	<%= @heading.html_safe %>
	<div id="filter">
		<form>
			Max Price:
			<select name="priceFilter" id="priceFilter" onchange="updateFilter()" size="1">
				<option value="">No Limit</option>
				<option value="5">$5.00</option>
				<option value="10">$10.00</option>
				<option value="15">$15.00</option>
				<option value="20">$20.00</option>
				<option value="25">$25.00</option>
				<option value="30">$30.00</option>
				<option value="40">$40.00</option>
				<option value="50">$50.00</option>
				<option value="75">$75.00</option>
				<option value="100">$100.00</option>
				<option value="150">$150.00</option>
			</select>
			Location:
			<%= select_tag("areaFilter", options_from_collection_for_select(@areas, "id", "name"), :prompt => "All Locations", :onchange => 'updateFilter()') %>
		</form>
	</div>
	<div data-role="content" id="dealListWrapper" style="margin:-15px;">
		
	</div>
</div>
<!-- ViewDealPage -->
<div data-role="page" id="ViewDealPage">
	<%= @heading.html_safe %>
	<div data-role="content">
		<div id="dealData" style="margin:-15px;">
			
		</div>
	</div>
</div>
<!-- PurchaseDeal -->
<div data-role="page" id="PurchaseDeal" data-backbtn="false">
	<%= @heading.html_safe %>
	<div data-role="content">
		<div id="dealPurchaseData" style="margin:-15px;">
			<div id="mainPurchaseFormWrapper">
				<h3>Order Information:</h3>
				<table class="checkoutTotalsTop">
					<tr>
						<td colspan="2" class="purchaseDealHeadline">
			
						</td>
					</tr>
					<tr>
						<td class="checkoutTotalsLeft">
							
						</td>
						<td class="checkoutTotalsRight">
							<h4>Total: $25</h4>
						</td>
					</tr>
				</table>
			</div>
			<div id="mainPurchaseFormWrapper">
