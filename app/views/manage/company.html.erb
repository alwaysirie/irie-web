<div id="dealHeader">
	<%= @company.name %>
</div>
<a href="/manage/edit_company/<%= @company.id %>" class="button" style="float:right;margin:0 2px 8px 0;">Edit Company</a><br>
<div id="dealInfoWrapper" class="paddedBox">
	<div id="companyDetailsLeft">
		<table class="standardTable normalText">
			<tr>
				<td>Company Name:</td>
				<td><%= @company.name %></td>
			</tr>
			<tr>
				<td>Company Phone:</td>
				<td><%= @company.phone %></td>
			</tr>
			<tr>
				<td>Company Website:</td>
				<td><%= @company.url %></td>
			</tr>
		</table>
	</div>
	<div id="companyDetailsRight">
		<table class="standardTable normalText" style="color:#ffffff;">
			<tr>
				<td>Active Deals:</td>
				<td><%= @company.active_deals %></td>
			</tr>
			<tr style="background-color:#7cced0;">
				<td>Pending Deals:</td>
				<td><%= @company.pending_deals %></td>
			</tr>
			<tr>
				<td>Expired Deals:</td>
				<td><%= @company.expired_deals %></td>
			</tr>
		</table>
	</div>
	<div id="companyDetailsWide" style="margin-top:20px;">
		<div style="float:left;"><h3>Deals (<%= @company.deal_count %>)</h3></div>
		<div style="float:right;"><a href="/manage/add_deal/<%= @company.id %>" class="button" style="margin-top:6px;">Add Deal</a></div>
		<table class="standardTable smallText" style="margin:0 10px;">
			<tr>
				<td class="table_heading">Name</td>
				<td class="table_heading">Start Date</td>
				<td class="table_heading">End Date</td>
				<td class="table_heading">Purchases</td>
				<td class="table_heading">Actions</td>
			</tr>
			<% for d in @company.deals %>
				<tr>
					<td><%= d.name %></td>
					<td><%= d.start_date.strftime("%B %d, %Y") %></td>
					<td><%= d.end_date.strftime("%B %d, %Y") %></td>
					<td><%= d.purchases %></td>
					<td><a href="/manage/deal/<%= d.id %>" class="button">View Deal</a></td>
				</tr>
			<% end %>
		</table>
	</div>
	<div id="companyDetailsWide">
		<h3>Locations (<%= @company.store_locations.count %>)</h3>
		<% for l in @company.store_locations %>
			<div class="locationDetails smallText">
				<strong><%= l.name %></strong><br>
				<%= l.full_address.titleize.html_safe %><br><br>
				Phone: <%= number_to_phone l.phone %>
			</div>
		<% end %>
	</div>
</div>